                        <li><%= link_to "Contact", "#contact", id: "blog-contact" %></li>
                        <li class="blog-icon"><a href="http://www.instagram.com" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                        <li class="blog-icon"><a href="http://www.twitter.com" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                        <li class="blog-icon"><a href="http://www.github.com" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a></li>
                    </ul>
                  </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div><!-- Closes the Outer Navigation Div -->


        <%= yield %>

